<InventoryCard@BoxLayout>:
    orientation: 'horizontal'
    size_hint_y: None
    height: '60dp'
    padding: 10
    spacing: 10
    canvas.before:
        Color:
            rgba: 1, 0.9, 0.8, 1  # Cream
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10]
    item_text: ''
    remove_callback: lambda *args: None
    suggest_callback: lambda *args: None
    Label:
        text: root.item_text
        color: 1, 0.4, 0, 1  # Orange text
        size_hint_x: 0.6
    BoxLayout:
        size_hint_x: 0.4
        spacing: 5
        Button:
            text: "Remove"
            background_color: 1, 0.6, 0, 1
            on_press: root.remove_callback()
        Button:
            text: "Suggest"
            background_color: 1, 0.5, 0, 1
            on_press: root.suggest_callback()

<CreatePasswordScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        canvas.before:
            Color:
                rgba: 1, 0.9, 0.8, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Create Password"
            color: 1, 0.4, 0, 1
        TextInput:
            id: name_input
            hint_text: "Name"
        TextInput:
            id: password_input
            hint_text: "Password"
            password: True
        Button:
            text: "Save"
            background_color: 1, 0.5, 0, 1
            on_press: app.save_password()
        Label:
            id: status_label
            text: ""
            color: 1, 0, 0, 1

<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        canvas.before:
            Color:
                rgba: 1, 0.9, 0.8, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Login"
            color: 1, 0.4, 0, 1
        TextInput:
            id: name_input
            hint_text: "Name"
        TextInput:
            id: password_input
            hint_text: "Password"
            password: True
        Button:
            text: "Login"
            background_color: 1, 0.5, 0, 1
            on_press: app.submit_info()
        Button:
            text: "Forgot Password?"
            background_color: 1, 0.6, 0, 1
            on_press: root.manager.current = 'reset_password'
        Label:
            id: login_status
            text: ""
            color: 1, 0, 0, 1

