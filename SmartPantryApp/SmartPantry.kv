<CategoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        canvas.before:
            Color:
                rgba: 1, 0.9, 0.8, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Select Category"
            color: 1, 0.4, 0, 1
        Button:
            text: "Fruits & Vegetables"
            background_color: 1, 0.5, 0, 1
            on_press: app.open_category('fruits_vegetables')
        Button:
            text: "Grains"
            background_color: 1, 0.5, 0, 1
            on_press: app.open_category('grains')
        Button:
            text: "Non-Veg"
            background_color: 1, 0.5, 0, 1
            on_press: app.open_category('non_veg')
        Button:
            text: "Dairy"
            background_color: 1, 0.5, 0, 1
            on_press: app.open_category('dairy')
        Button:
            text: "Others"
            background_color: 1, 0.5, 0, 1
            on_press: app.open_category('others')

<CategoryEntryScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 15
        spacing: 10
        canvas.before:
            Color:
                rgba: 1, 0.95, 0.85, 1
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            size_hint_y: None
            height: '40dp'
            Button:
                text: "< Back"
                background_color: 1, 0.6, 0, 1
                on_press: root.manager.current = 'category'
        Label:
            id: category_label
            text: "Inventory"
            color: 1, 0.4, 0, 1
        TextInput:
            id: item_input
            hint_text: "Item Name"
        TextInput:
            id: mfg_input
            hint_text: "Manufacture Date"
        TextInput:
            id: exp_input
            hint_text: "Expiry Date (dd/mm/yyyy)"
        Button:
            text: "Add Item"
            background_color: 1, 0.5, 0, 1
            on_press: app.add_item()
        Button:
            text: "Show Inventory"
            background_color: 1, 0.6, 0, 1
            on_press: app.show_inventory()
        ScrollView:
            BoxLayout:
                id: inventory_box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
        Label:
            id: status_label
            text: ""
            color: 1, 0, 0, 1
